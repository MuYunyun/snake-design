{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./lib/",
      "preserveConstEnums": true,
      "removeComments": true,
      "target": "ES5",
      "allowJs": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "noUnusedLocals": true,
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ],
      "lib": [
        "es7",
        "dom"
      ],
      "paths": {
        "components/*": ["./components/*"],
        "types/*": ["./types/*"]
      }
    },
    "include": [
      "./components"
    ],
    "exclude": [
      "node_modules",
      "./components/**/__test__/**.test.tsx"
    ]
}